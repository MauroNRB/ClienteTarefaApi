{% extends 'base.html.twig' %}

{% import 'Macros/buttons.html.twig' as buttons %}

{% block title %}Clientes{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <br>
        <h1>Criado Cliente</h1>
        <div class="float-right">
            {{ buttons.show(path('client'), 'Voltar') }}
        </div>
        <br />
        <div style="margin-top: 30px;">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_row(form.name) }}
            </div>
            <div class="form-group">
                {{ form_row(form.email) }}
            </div>
            <div class="form-group">
                {{ form_row(form.password) }}
            </div>
            <div class="form-group">
                {{ form_row(form.phone) }}
            </div>
            <div class="form-group">
                {{ form_row(form.genre) }}
            </div>
            <div class="form-group">
                {{ form_row(form.save) }}
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
