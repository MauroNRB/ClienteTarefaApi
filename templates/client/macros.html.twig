{% macro list(clients) %}

{% import 'Macros/buttons.html.twig' as buttons %}
{% import 'Macros/alerts.html.twig' as alerts %}

{% if clients|length > 0 %}
    <div class="table-responsive">
        <table class="table table-hover table-bordered selectable">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Telefone</th>
                    <th>GÃªnero</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for client in clients %}
                <tr>
                    <td>
                        {{ client.name }}
                    </td>
                    <td>
                        {{ client.email }}
                    </td>
                    <td>
                        {{ client.phone }}
                    </td>
                    <td>
                        {{ client.getGenreLabel() }}
                    </td>

                    <td>
                        <div class="float-right">
                            {{ buttons.delete(path('client_delete', {'id': client.id})) }}
                        </div>
                        <div class="float-right" style="margin-right: 15px;">
                            {{ buttons.edit(path('client_update', {'id': client.id})) }}
                        </div>
                        <div class="float-right" style="margin-right: 15px; margin-left: -65px;">
                            {{ buttons.show(path('client_show', {'id': client.id})) }}
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    {{ alerts.info('Nenhum resultado encontrado.'|trans) }}
{% endif %}

{% endmacro %}
