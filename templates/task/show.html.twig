{% extends 'base.html.twig' %}

{% import 'Macros/buttons.html.twig' as buttons %}

{% block title %}Clientes{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <br>
        <h1>Tarefa - {{ task.description }}</h1>
        <div class="float-right">
            {{ buttons.show(path('task'), 'Voltar') }}
        </div>
        <br />
        <div class="table-responsive" style="margin-top: 30px;">
            <table class="table table-hover table-bordered selectable">
                <thead>
                <tr style="display: none;">
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            Descrição
                        </td>
                        <td>
                            {{ task.description }}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Data de Expiração
                        </td>
                        <td>
                            {{ task.expirationAt|date("d/m/Y") }}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Data de Conclusão
                        </td>
                        <td>
                            {{ task.conclusionAt|date("d/m/Y") }}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Cliente
                        </td>
                        <td>
                            {{ task.client.name }}
                        </td>
                    </tr>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
